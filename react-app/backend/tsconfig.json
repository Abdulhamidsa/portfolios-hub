{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules", "dist"]
}
