{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": false
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "services/project.service.public.js",
        "src/routes/project/project.routes.public.js"
    ],
    "exclude": ["node_modules", "dist"]
}
